{{view GG.FatherPoolView class="male-parents" id="parent-fathers-pool-container"}}
{{view GG.MotherPoolView id="parent-mothers-pool-container"}}

<div id="breeder">
  {{view GG.BreedButtonView id="breed-button"}}
  <div id="mother">
    {{#with GG.breedingController.mother}}
      {{view GG.DrakeView contentBinding="this" width="140"}}
    {{/with}}
  </div>
  <div id="father">
    {{#with GG.breedingController.father}}
      {{view GG.DrakeView contentBinding="this" width="140"}}
    {{/with}}
  </div>
  <div id="child">
    {{#with GG.breedingController.child}}
      {{view GG.DrakeView contentBinding="this" width="140"}}
    {{/with}}
  </div>
</div>

<div id="offspring-pool">
  {{#each GG.offspringController}}
    {{#view GG.DrakeView contentBinding="this"}}{{/view}}
  {{/each}}
</div>