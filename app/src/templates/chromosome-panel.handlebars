{{#with view.controller.selected}}
  {{view GG.ChromoView chromo="1" side="b" contentBinding="this"}}
  {{view GG.ChromoView chromo="1" side="a" contentBinding="this"}}
  {{view GG.ChromoView chromo="2" side="b" contentBinding="this"}}
  {{view GG.ChromoView chromo="2" side="a" contentBinding="this"}}
  {{#if female}}
    {{view GG.ChromoView chromo="X" side="b" contentBinding="this"}}
  {{else}}
    {{view GG.ChromoView chromo="Y" side="b" contentBinding="this"}}
  {{/if}}
  {{view GG.ChromoView chromo="X" side="a" contentBinding="this"}}
{{/with}}
