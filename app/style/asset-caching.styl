// These are assets that we'd like to pre-load,
// but are referenced directly by the app and not
// via css, so the pre-loader doesn't find them
// by default.

// MAKE SURE THESE DON'T ACTUALLY MATCH!

.needs-caching
  for color in 'albino' 'blue' 'green' 'purple' 'red' 'shinyBlue' 'shinyGreen' 'shinyPurple' 'shinyRed'
    &.drake-{color}
      background: url('../images/drakes/' + color + '.png')
  for npc in 'npc1_bookkeeper1' 'npc1_bookkeeper1_left' 'npc2_alchemist1' 'npc2_alchemist1_right' 'npc2_alchemist2' 'npc2_alchemist2_right'
    &.npc-{npc}
      background: url('../images/' + npc + '.png')
  &.bubbles
    &.heart
      background: url('../images/heart-bubble.png')
    &.question
      background: url('../images/bubble-question.png')
  &.misc
    &.delete
      background: url('../images/delete.png')