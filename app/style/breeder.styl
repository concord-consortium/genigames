@import 'app/style/mixins/position'
light-text-color = #BBB

#breeding-apparatus
  absolute: top left 3000px width 960px height 900px
  overflow: hidden

#breeding-background
  absolute: top 60px left width 1300px height 900px
  background: top left no-repeat url('../images/background_meiosis.jpg')
  background-color: white
  overflow: hidden

#breed-top-bar
  absolute: top 0px left width 1040px height 152px

.breed-title
  relative: top 58px left 16px
  float: left
  font-size: 2.1em

.task-description
  absolute: top 28px left 32px width 770px

#breeder
  absolute: top 110px left width 2040px height 612px
  background: top left no-repeat url('../images/breeding-panels-left.png')

#breed-controls
  absolute: top 165px left 650px width 268px height 101px
  background-image: url('../images/breed-controls.png')
  z-index: 2
  &.automated
    background-position: 0 0
  &.controlled
    background-position: 0 100%

#meiosis-button
  absolute: top 23px left 94px width 59px height 59px
  cursor: pointer

#breed-button
  absolute: top 6px left 170px width 86px height 89px
  background: top left no-repeat url('../images/breed-button.png')
  background-position-y: -262px
  &.enabled
    background-position-y: 2px
    cursor: pointer
    &:active
      background-position-y: -175px
      cursor: pointer
  &.no-more-breeds
    background-position-y: -86px

#target
  absolute: top 170px left 508px width 124px height 83px
  font-family: Monaco, Consolas, "Lucida Console", monospace;
  color: light-text-color

#target-traits
  relative: top 5px left 10px

.parent
  position: relative
  display: inline-block

parent-pool-container(toppx)
  absolute: top toppx left 20px width 490px height 205px
  overflow: auto

#parent-fathers-pool-container
  parent-pool-container(0px)

#parent-mothers-pool-container
  parent-pool-container(193px)

chromosome(toppx)
  absolute: top toppx left 680px width 125px height 265px

#father-chromosome
  chromosome(20px)

#mother-chromosome
  chromosome(285px)

#offspring-pool .offspring
  display: inline-block
  position: relative

.offspring .alleleString
  absolute: bottom 15px width 200px
  text-align: center
  color: white

#offspring-buttons
  absolute: top 230px left -45px width 390px height 42px
  &>div
    relative: top 3px width 129px height 40px
    float: left
    cursor: pointer

.offspring-buttons-back
  background: top left no-repeat url('../images/button-back.png')
  &:active
    background-position-y: 97%;

.offspring-buttons-use
  background: top left no-repeat url('../images/finish-button.png')
  &:active
    background-position-y: 97%;

.offspring-buttons-save
  background: top left no-repeat url('../images/use-as-parent-button.png')
  &:active
    background-position-y: 99%;
  &.disabled
    background-position-y: 49%;

#parent-available-message
  absolute left 2px bottom 10px width 275px
  text-align: left
  color: light-text-color

.removeButton
  display: none

.parent-pool .parent:hover .removeButton
  absolute: left 10px bottom 15px
  display: inline
  z-index: 2

#offspring-pool
  absolute: top 10px left 1030px width 150px
  text-align: right

#father
  absolute: top -19px left 490px
  span
    absolute: top 113px left 40px
    color: white

#mother
  absolute: top 239px left 490px
  span
    absolute: top 113px left 40px
    color: white

#egg-container
  absolute: top 251px left 200px

#egg
  background-image: url('../images/egg-sprite.png')
  width: 150px
  height: 150px
  background-repeat: no-repeat
  background-position: 0px 0px

.move-counter
  absolute: top 35px left -1px width 85px height 37px
  background: white

.moveCounterDigit
  absolute: top 1px left width 25px height 35px
  background: top left no-repeat url('../images/move-counter-sprite.png')

#moveCounterHundreds
  left: 3px

#moveCounterTens
  left: 30px

#moveCounterOnes
  left: 57px

.match-goal-counter
  absolute: top 500px left 490px width 100px

