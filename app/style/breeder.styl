@import 'app/style/mixins/position'

#breeding-apparatus
  absolute: top left 3000px width 960px height 900px
  overflow: hidden

#breeding-background
  absolute: top 60px left width 1300px height 900px
  background: top left no-repeat url('../images/background_meiosis.jpg')
  background-color: white
  overflow: hidden

#breed-top-bar
  absolute: top 0px left width 1040px height 152px

.breed-title
  relative: top 58px left 16px
  float: left
  font-size: 2.1em

.task-description
  absolute: top 28px left 32px width 770px

.select-parents
  relative: top 10px left 777px width 140px height 39px
  float: left
  cursor: pointer

#breeder
  absolute: top 110px left width 2040px height 612px
  background: top left no-repeat url('../images/breeding_panels.png')

#breed-controls
  absolute: top 165px left 650px width 268px height 101px
  background-image: url('../images/breed-controls.png')
  z-index: 2
  &.automated
    background-position: 0 0
  &.controlled
    background-position: 0 100%

#meiosis-button
  absolute: top 23px left 94px width 59px height 59px
  cursor: pointer

#breed-button
  absolute: top 5px left 167px width 93px height 90px
  &.enabled
    cursor: pointer
    &:active
      background-image: none

#target
  absolute: top 284px left 615px width 124px height 83px
  font-weight: bold

#target-traits
  relative: top 5px left 10px

.parent
  position: relative
  display: inline-block

parent-pool-container(toppx)
  absolute: top toppx left 20px width 490px height 205px
  overflow: auto

#parent-fathers-pool-container
  parent-pool-container(0px)

#parent-mothers-pool-container
  parent-pool-container(193px)

#parent-pool-divider
  absolute: top 217px left 22px width 430px height 2px
  background-color: #787878

chromosome(toppx)
  absolute: top toppx left 680px width 125px height 265px

#father-chromosome
  chromosome(20px)

#mother-chromosome
  chromosome(285px)

#offspring-pool .offspring
  display: inline-block
  position: relative

.offspring .alleleString
  absolute: bottom 15px width 200px
  text-align: center
  color: white

#offspring-buttons
  absolute: top 230px left -35px width 352px height 42px
  background: top left no-repeat url('../images/offspring-buttons.png')
  &>div
    relative: width 170px height 35px
    float: left
    cursor: pointer

.offspring-buttons-use
  top: 3px
  left: 9px

.offspring-buttons-save
  top: 3px
  left: 3px

.removeButton
  display: none

.parent-pool .parent:hover .removeButton
  absolute: left 10px bottom 15px
  display: inline
  z-index: 2

#offspring-pool
  absolute: top 10px left 1030px width 150px
  text-align: right

#father
  absolute: top -15px left 500px
  span
    absolute: top 113px left 40px
    color: white

#mother
  absolute: top 242px left 500px
  span
    absolute: top 113px left 40px
    color: white

#egg-container
  absolute: top 251px left 200px

#egg
  background-image: url('../images/egg-sprite.png')
  width: 150px
  height: 150px
  background-repeat: no-repeat
  background-position: 0px 0px

.move-counter
  absolute: top 35px left -1px width 85px height 37px
  background: white

.moveCounterDigit
  absolute: top 1px left width 25px height 35px
  background: top left no-repeat url('../images/move-counter-sprite.png')

#moveCounterHundreds
  left: 3px

#moveCounterTens
  left: 30px

#moveCounterOnes
  left: 57px

.match-goal-counter
  absolute: top 500px left 490px width 100px

