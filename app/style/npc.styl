@import 'app/style/mixins/position'
@import 'app/style/mixins/border'

.npc.left
  top: 415px
  left: 200px
  z-index: 2

.npc.right
  top: 415px
  left: 625px
  z-index: 2

.npc
  position: absolute
  .character
    z-index: 0
  .bubble
    position: absolute
    margin-left: 44px
    margin-top: -111px

.speech-bubble
  absolute: bottom 205px
  z-index: 2
  font-size: 1.2em
  width: 225px
  background-color: rgb(251, 252, 225)
  padding: 23px
  border-radius: 35px

.right .speech-bubble
  left: -215px
  &:after
    absolute: right 40px bottom -30px width 0
    content: ""
    position: absolute
    border-width: 0 20px 30px 0
    border-style: solid
    border-color: transparent rgb(251, 252, 225)
    display: block

.left .speech-bubble
  left: 61px
  &:after
    absolute: left 40px bottom -30px width 0
    content: ""
    position: absolute
    border-width: 0 0 30px 20px
    border-style: solid
    border-color: transparent rgb(251, 252, 225)
    display: block

.speech-bubble-no-npc
  absolute: left 340px top 134px width 225px
  z-index: 2
  font-size: 1.2em
  background-color: rgb(251, 252, 225)
  padding: 23px
  border-radius: 35px
  border: black solid 2px

.heart-bubble
  absolute: left top -44px
  z-index: 10

