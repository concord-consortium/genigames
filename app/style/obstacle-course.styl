@import 'app/style/mixins/position'

.obstacle-course
  absolute: left top 60px width 1100px height 660px
  z-index: 0
  background-color: white

  .course
    absolute: left 10px top 30px width 1000px height 600px
    overflow: hidden
    z-index: 1

  .controls
    absolute: left 50px top 20px width 150px height 20px
    text-align: center
    z-index: 10

  .background
    absolute: left top 30px width 2020px height 300px
    background: top left no-repeat url('../images/obstacle-course/repeatbg_town01.jpg')
    z-index: 2

  .drake-container
    absolute: left top 160px
    z-index: 10
    overflow: visible

  obstacle(img, width, height)
    background: top left no-repeat url(img)
    width: width
    height: height

  .obstacles
    absolute: left 200px top 85px width 2000px
    z-index: 3

    .obstacle
      absolute: left top
      display: inline-block
      z-index: 4
      &.ducks
        obstacle('../images/obstacle-course/obstacle-ducks.png', 200px, 100px)
      &.desk
        obstacle('../images/obstacle-course/obstacle-desk.png', 200px, 100px)
      &.sheep
        obstacle('../images/obstacle-course/obstacle-sheep.png', 200px, 100px)
      &.rain
        obstacle('../images/obstacle-course/obstacle-rain.png', 200px, 100px)
      &.tree
        obstacle('../images/obstacle-course/tree01.png', 150px, 183px)
      &.pond
        obstacle('../images/obstacle-course/pond01.png', 200px, 84px)

