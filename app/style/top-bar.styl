@import 'app/style/mixins/position'

#topBar
  background: url('../images/header.jpg')
  relative: left 20px width 960px height 120px
  background-color: rgb(150,150,150)
  color: #a1a790
  font-size: 14pt
  font-weight: normal
  z-index: 2
  .goToTown
    absolute: right 165px top 18px width 41px height 40px
    background: top left no-repeat url('../images/button-town.png')
    cursor: pointer
  .goToWorld
    absolute: right 115px top 19px width 41px height 40px
    background: top left no-repeat url('../images/button-world.png')
    cursor: pointer
  .logout
    absolute: right 30px top 25px width 75px height 25px
    font-size: 12pt
    div
      relative: top 3px
  .task-list
    absolute: right 30px top 25px width 125px height 25px
    font-size: 12pt
    div
      relative: top 3px

#greeting
  absolute: left 30px top 20px
  font-size: 25pt

#reputation
  absolute: left 30px top 75px
  cursor: pointer

#level
  absolute: left 400px top 75px width 530px
  text-align: right

