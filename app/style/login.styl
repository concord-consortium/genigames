@import 'app/style/mixins/position'

login-style()
  absolute: top 250px width 700px height 701px
  text-align: center


#login
  login-style()
  div
    padding: 3px

#choose-class
  login-style()
  div
    padding: 3px

#define-groups
  absolute: width 660px left 170px
  color: #999999
  div
    padding: 5px
  .title
    font-weight: bold
    font-size: 1.2em
  .headers
    font-weight: bold
    font-size: 1.1em
  .name
  .school-id
  .remove-link
    display: inline-block

  .name
    width: 300px
  .school-id
    width: 200px
  .remove-link
    width: 100px
  .error
    color: #990000
    font-size: 0.9em

#username, #password
  width: 200px

#login-error
  color: red
  font-weight: bold

#loadingStatus
  relative: top 150px
