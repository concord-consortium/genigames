@import 'app/style/mixins/position'
@import 'app/style/mixins/border'

#meiosis-container
  absolute: left 770px top 25px width 760px height 435px

.cell
  absolute: left 10px top -10px width 300px height 120px
  background-color: rgba(223, 223, 223, 0.45)
  border-top: 40px solid transparent
  z-index: -4
  border-radius: 90px

.meiosis.father
  absolute: top left -45px width 760px height 217px
  z-index: 2

.meiosis.mother
  @extend .meiosis.father
  top: 218px

.meiosis .chromosome-panel
  absolute: top left

.meiosis .allele
  margin-left: 4px

.meiosisControlView
  absolute: top left 470px width 183px height 182px
  background-color: white
  border: 1px solid black
  border-radius: 10px
  box-shadow: 5px 5px 5px 1px #011627

  button
    absolute: bottom 5px right 5px

.meiosisControlView
  p
  h3
    padding: 5px
  .cost
    absolute: left 5px bottom 25px width 190px
    font-weight: bold

.crossoverPoint
  absolute: height 4px width 30px left 0px
  z-index: 5
  &.clickable
    cursor: pointer
    border: 1px dotted black
    margin: 0px
    background-color: rgba(255,255,153,0.5)
    &:hover
      background-color: rgb(255,255,150)
  &.selected
    background-color: yellow
  &.tail
  &.horns
  &.dilute
    top: -3px
  &.metallic
  &.color
  &.firebreathing
    top: 22px
  &.wings
  &.green
    top: 47px
  &.armor
  &.spikes
    top: 72px
