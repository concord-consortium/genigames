@import 'app/style/mixins/position'

#sky
  absolute: left 15px width 960px height 560px
  background: url('../images/world01.jpg')
  background-repeat: no-repeat
  overflow: hidden
  border: 5px solid #402309
  .logout
    absolute: top 10px left 10px

#world
  absolute: left 348px top 87px width 432px height 432px
  background-repeat: no-repeat
  margin-left: auto
  margin-right: auto

#clouds
  absolute: left 280px width 560px height 560px
  background-position: 0px 0px
  background-repeat: no-repeat

.location
  position: absolute
  z-index: 1
  &.enabled
    cursor: pointer

.huts
  height: 90px
  width: 120px

.houses
  height: 70px
  width: 150px

townIcon(img, width=175px, height=125px)
  background: no-repeat center url(img)
  width: width
  height: height

.townIcon1
  townIcon('../images/townIcon1-disabled.png')
  &.enabled
    background: no-repeat center url('../images/townIcon1.png')
  &.completed
    background: no-repeat center url('../images/townIcon1-complete.png')

.townIcon2
  townIcon('../images/townIcon2-disabled.png')
  &.enabled
    background: no-repeat center url('../images/townIcon2.png')
  &.completed
    background: no-repeat center url('../images/townIcon2-complete.png')

.townIcon3
  townIcon('../images/townIcon3-disabled.png')
  &.enabled
    background: no-repeat center url('../images/townIcon3.png')
  &.completed
    background: no-repeat center url('../images/townIcon3-complete.png')

.townIcon4
  townIcon('../images/townIcon4-disabled.png')
  &.enabled
    background: no-repeat center url('../images/townIcon4.png')
  &.completed
    background: no-repeat center url('../images/townIcon4-complete.png')

.townIcon5
  townIcon('../images/townIcon5-disabled.png')
  &.enabled
    background: no-repeat center url('../images/townIcon5.png')
  &.completed
    background: no-repeat center url('../images/townIcon5-complete.png')

.world-town
  height: 110px
  width: 170px

.locked
  content: url("../images/lock.png");

#dragon-right
  background: url(../images/drakesprite-small.png)
  width: 90px
  height: 80px
  background-repeat: no-repeat
  position: absolute
  left: 480px
  top: 100px
  z-index: 2
  -moz-transform: rotate(-20deg)
  -webkit-transform: rotate(-20deg)
  -o-transform: rotate(-20deg)
  -ms-transform: rotate(-20deg)

#dragon-left
  background: url(../images/drakesprite-small.png)
  width: 90px
  height: 80px
  background-repeat: no-repeat
  position: absolute
  left: 480px
  top: 100px
  z-index: 2
  -moz-transform: rotate(-20deg) scaleX(-1)
  -o-transform: rotate(-20deg) scaleX(-1)
  -webkit-transform: rotate(-20deg) scaleX(-1)
  transform: rotate(-20deg) scaleX(-1)
  filter: FlipH
  -ms-filter: "FlipH"

#message
  background: url(../images/click-message.gif)
  background-size: 100%
  width: 200px
  height: 100px
  background-repeat: no-repeat
  position: absolute
  left: 810px
  top: -50px

.admin
  display: none
  absolute: left 50% top 5px width 500px
  background: lightblue
  border: 2px black solid
  margin-left: -250px
  padding: 10px
  z-index: 1000

  div
    padding: 5px

  h1
    text-align: center
    font-size: 1.5em
    padding: 3px

  button
    relative: left 363px top -5px
    margin-right: 10px

  .drake-submission
    border: 1px solid black
    margin: 6px

.leader-board
  display: none
  position: relative
  top: 5px
  width: 270px
  padding: 10px
  margin-top: 25px
  margin-left: auto
  margin-right: auto
  z-index: 1000
  background-color: white
  border: 4px solid black
  box-shadow: 0 0 50px #FFF

  h1
    text-align: center
    font-size: 1.5em
    padding: 9px

  .close
    position: absolute
    top: 5px
    left: 244px
    color: #888
    cursor: pointer

  div
    padding: 5px
    &.is-user
      background-color: #B4B4FC
      font-weight: bold

    .rank
      font-weight: bold

    .score
      float: right

.leader-board-notice
  width: 300px

  .name
    font-weight: bold

#powerup-popup
  display: none
  position: relative
  top: 30px
  width: 706px
  height: 499px
  padding: 10px
  margin-left: auto
  margin-right: auto
  z-index: 6000
  background-image: url('../images/powerPopup.png')
  background-repeat: no-repeat

  .powerup-title
    text-align: center
    font-size: 2.5em
    font-weight: bold
    padding: 9px
    position: absolute
    color: #fbccff
    top: 255px
    left: 125px
    width: 345px
    height: 3em

  .powerup-text
    text-align: center
    font-size: 1.3em
    padding: 9px
    position: absolute
    color: #cccccc
    top: 355px
    left: 125px
    width: 345px
    height: 3em

  .close
    position: absolute
    top: 430px
    left: 400px
    color: #999
    cursor: pointer
